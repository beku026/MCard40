@using MCard40.Infrastucture.StaticClasses;
@model MCard40.Model.Entity.CardPage
@{
    ViewData["Title"] = "Детали карты";
}

<h2>Детали о посещении </h2>

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/image/pacientIcon.jpg" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>Пациент</h4>
