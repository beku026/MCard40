@model IEnumerable<MCard40.Model.Entity.CardPage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CardCreate" asp-route-id="@ViewBag.PatientId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Disease)
            </th>
