@using MCard40.Infrastucture.StaticClasses;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicalCard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicalCard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="shortcut icon" href="/image/favicon.ico" type="image/png">


    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="style.css">

    <!-- Font Awesome JS -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>

</head>
<body>


    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>
                    <a class="med" asp-area="" asp-controller="Home" asp-action="Index" style="margin-left:20px; text-decoration:none !important">
                        MCard40
                    </a>
                </h3>
            </div>

            <ul class="list-unstyled components" style="font-size: 1.1em !important;">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Права и обязанности врача</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="TypesDoctor" asp-action="Index">Типы врачей</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="TypesDoctor" asp-action="Price">Прейскурант</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="TypesDoctor" asp-action="Interest">Интересное</a>
                </li>
                @if (User.IsInRole(WC.Patient) || User.IsInRole(WC.Doctor))
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="UserPage" asp-action="Index">Анкета</a>
                    </li>
                }
                @if (User.IsInRole(WC.Admin) || User.IsInRole(WC.Patient) || User.IsInRole(WC.Doctor))
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Doctor" asp-action="Index">Все доктора</a>
                    </li>
                }
                @if (User.IsInRole(WC.Admin) || User.IsInRole(WC.Doctor))
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Patient" asp-action="Index">Все пациенты</a>
                    </li>
                }
                @if (User.IsInRole(WC.Admin))
                {
                    <li class="nav-item">
                        <a asp-area="Identity" asp-page="/Account/Register">Создать аккаунт доктора</a>
                    </li>
                }
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content" style="margin-left:10px;">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    @*                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MedicalCard</a>  *@
                    <button type="button" id="sidebarCollapse" class="btn btn-info" style=" background-color: #6DE66D !important; border-color:#c1ffc1">
                        <i class="fas fa-align-left"></i>
                        @* <span>Toggle Sidebar</span>*@
                    </button>
                    @*<button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-align-justify"></i>
                    </button>*@

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        @*    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item active">
                        <a class="nav-link" href="#">Page</a>
                        </li>
                        </ul>*@

                    </div>
                </div>
                <partial name="_LoginPartial" />
            </nav>
            @RenderBody()

        </div>
    </div>



    <footer class="footer-distributed">

			<div class="footer-left">

				<h3>MCard40</h3>

            <p class="footer-links" style=" font-size: 14px !important;">
                <a asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                <a asp-area="" asp-controller="TypesDoctor" asp-action="Interest">Интересное</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Обязанности врача</a>
                <a asp-area="" asp-controller="TypesDoctor" asp-action="Index">Типы врачей</a>
                <a asp-area="" asp-controller="TypesDoctor" asp-action="Price">Цены</a>

                </p>

				<p class="footer-company-name">MCard40 © 2022</p>
			</div>

			<div class="footer-center">

            <div style="margin-bottom:20px !important">
					<i class="fa fa-map-marker"></i>
                <p style=" font-size: 14px;">115/1 ул. Ибраимова Бишкек, Кыргызстан</p>
				</div>

            <div style="margin-bottom:20px !important">
                <i class="fa fa-phone" style="font-size: 14px;"></i>
                <p style="font-size: 14px;">+996 999 99 99 99</p>
				</div>

            <div style="margin-bottom:20px !important">
                <i class="fa fa-envelope"></i>
                <p style=" font-size: 14px;"><a href="mailto:support@company.com">mcard40@company.com</a></p>
				</div>

			</div>

			<div class="footer-right">

				<p class="footer-company-about">
					<span>О нас</span>
                MCard40 предоставляет пациенту электронную карточку, куда будут вводить и добавлять всю информацию о нём.
                Таким образом, каждый врач имеет доступ к наглядному отображению различной динамически изменяющейся информации о пациенте,
                что позволяет оказывать более качественные услуги.
            </p>

			</div>

		</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>
